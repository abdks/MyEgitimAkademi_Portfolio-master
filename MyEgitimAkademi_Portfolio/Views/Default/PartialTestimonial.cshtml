@model List<MyEgitimAkademi_Portfolio.Models.Testimonial>
<div class="col-lg-6 mt-lg-0 mt-5">
    <span class="text">Referanslar</span>
    <h3 class="title-big">İnsanların Benim<span>Hakkımda Düşündükleri</span> </h3>
    <div id="owl-demo1" class="owl-carousel owl-theme mt-4 py-2 mb-4">
        @foreach (var x in Model)
        {


        <div class="item">
            <div class="testimonial-content">
                <div class="testimonial">
                    <blockquote>
                        <q>
                           @x.Comment
                        </q>
                    </blockquote>
                    <div class="testi-des">
                        <div class="test-img">
                            <img src="~/Templates/iportfolio-starter/assets/images/@x.ImageUrl" class="img-fluid"
                                 alt="client-img">
                        </div>
                        <div class="peopl align-self">
                            <h3>@x.NameSurname</h3>
                            <p class="indentity">@x.Title</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        }
    </div>
</div>
