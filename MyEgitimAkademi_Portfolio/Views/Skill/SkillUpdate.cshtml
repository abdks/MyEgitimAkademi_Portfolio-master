@model MyEgitimAkademi_Portfolio.Models.Skill2

@{ ViewBag.Title = "SkillUpdate";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Yetenek Güncelleme Sayfası</h2>

<form method="post">
    <label>Yetenek ID</label>
    @*@Html.TextBoxFor(x => x.skil, new { @class = "form-control" })*@
    @Html.TextBoxFor(x => x.SkillID,new { @class = "form-control"})
<label>Yetenek Adı</label>
    @Html.TextBoxFor(x => x.SkillTitle, new { @class = "form-control" })
    <label>Yetenek Açıklaması</label>
    @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control" })
<br />
    <button class="btn btn-outline-success">Verileri Güncelle</button>
</form>