
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İstatistik Sayfası</h2>

<div class="card text-white bg-primary mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:white">
        Toplam Proje Sayısı:
        @ViewBag.totalProjectCount
    </h5>
</div>


<div class="card text-white bg-danger mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:white">
        Toplam Referans Sayısı : 
        @ViewBag.totalTestimonialCount
    </h5>
</div>


<div class="card text-white bg-warning mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:white">
        Toplam Çalışma Günü :
        @ViewBag.sumWorkDay
    </h5>
</div>

<div class="card text-white bg-warning mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:white">
         Ortalama Proje Çalışma Süresi : 
        @ViewBag.avgWorkDay
    </h5>
</div>

<div class="card text-white bg-danger mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:white">
        Ortalama Proje Fiyatı :
        @ViewBag.avgPrice ₺
    </h5>
</div>

<div class="card text-white bg-danger mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:white">
        En Yüksesk Fiyatlı Proje :
        @ViewBag.maxPriceProject
    </h5>
</div>

<div class="card text-white bg-light mb-3" style="max-width: 100%">
    <h5 class="card-title" style="margin-left:20px; margin-top:5px; color:black">
        c# kategorisi proje sayısı :
        @ViewBag.categoryCountByName
    </h5>
</div>